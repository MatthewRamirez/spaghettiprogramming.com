source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'rack', '1.4.5'
gem 'haml'
gem 'execjs'
gem 'jquery-rails'
gem 'pg'
gem 'less-rails'
gem 'omniauth-google-oauth2'
