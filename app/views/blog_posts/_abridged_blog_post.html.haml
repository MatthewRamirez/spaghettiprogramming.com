%tr
  %td= link_to(blog_post.title, blog_slug_path(blog_post.slug), { :title => blog_post.title })
  %td= truncate( blog_post.body, {:length => 200} )
  %td
    =link_to "#{blog_post.user.identifier_url}", { :target => '_blank'} do
      =blog_post.user.nick
  %td= "#{blog_post.created_at.strftime("%Y-%m-%d")}"
  %td
    =link_to :edit, edit_blog_post_path(blog_post.id)
    =link_to :delete, blog_post_path(blog_post.id), { :method => :delete, :confirm => "This will destroy the post #{blog_post.title}.  Are you sure?" }
