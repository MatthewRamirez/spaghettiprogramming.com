<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>
        <%= 'Title' %>
      </th>
      <th>
        <%= 'Preview' %>
      </th>
      <th>
        <%= 'Author' %>
      </th>
      <th>
        <%= 'Created At' %>
      </th>
      <th>
        <%= 'Actions' %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @blog_posts.each do |blog_post| %>
      <%= render :partial => '/blog_posts/abridged_blog_post', :locals => { :blog_post => blog_post } %>
    <% end %>
    <%= will_paginate(@blog_posts, { :page_links => false, :previous_label => :Newer, :next_label => :Older, :container => true, :link_separator => ' | ' }) %>
  </tbody>
</table>
