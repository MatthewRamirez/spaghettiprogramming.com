!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "spaghettiprogramming.com"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="/images/favicon.ico" rel="shortcut icon")


  %body
    -if signed_in?
      .navbar.navbar-fluid-top
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand(href="/") spaghettiprogramming.com
            .container.nav-collapse
              %ul.nav
                %li= link_to "Home", root_path
                %li= link_to "Blog", blog_posts_path
                %li.dropdown
                  =link_to 'Projects <b class="caret"></b>'.html_safe, "#", "data-toggle" => "dropdown", "class" => "dropdown-toggle", "id" => "advertisement_dropdown", "role" => "button"
                  %ul.dropdown-menu{ :role => :menu, "aria-labelledby" => "advertisement_dropdown" }
                    /TODO make this list dynamic based upon advertisement start and end dates
                    %li= link_to "Compression Calculator", "http://spaghettiprogramming.com/compression_calculator", :tabindex => "-1"
                    %li= link_to "copypastr.com", 'http://copypastr.com', :tabindex => "-1"
                %li= link_to "Unpublished Blog Posts", unpublished_blog_posts_path
                %li= link_to "New Blog Post", new_blog_post_path
                %li= link_to "New Category", new_category_path
                %li= link_to "Sign out", signout_path
    -else
      .row-fluid
        .span12
          %p
    .container-fluid
      .row-fluid
        .span12
          .span2
            .well.sidebar-nav
              %ul.nav.nav-list
                %li= link_to "Home", root_path
                %li.dropdown
                  =link_to 'Categories <b class="caret"></b>'.html_safe, "#", "data-toggle" => "dropdown", "class" => "dropdown-toggle", "id" => "category_dropdown", "role" => "button"
                  %ul.dropdown-menu{ :role => :menu, "aria-labelledby" => "category_dropdown" }
                    -categories.each do |category|
                      %li
                        =link_to category.name, category_blog_posts_path(category.id)
                        -if signed_in?
                          =link_to :edit, edit_category_path(category)
                %li.dropdown
                  =link_to 'Projects <b class="caret"></b>'.html_safe, "#", "data-toggle" => "dropdown", "class" => "dropdown-toggle", "id" => "project_dropdown", "role" => "button"
                  %ul.dropdown-menu{ :role => :menu, "aria-labelledby" => "project_dropdown" }
                    %li= link_to "Compression Calculator", "http://spaghettiprogramming.com/compression_calculator", :target => '_blank'
                    %li= link_to "copypastr.com", 'http://copypastr.com', :target => '_blank'
          .span8
            = yield
      %p
        %footer
          ="&copy; Spaghetti Programming #{Time.now().strftime("%Y")}".html_safe
      %br
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
